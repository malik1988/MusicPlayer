QLabel {
    font: bold;
    color: #D8D9E0;
}


QSlider#slider::groove:horizontal {
    height: 4px;
    width: 440px;
    border: 1px solid #222225;
    border-radius: 2px;
    background: #18181A;
}

QSlider#slider::handle:horizontal {
    background: qradialgradient(spread:pad, cx:0.5, cy:0.5, radius:0.159, fx:0.5, fy:0.5, stop:0.806818 rgba(184, 37, 37, 255), stop:1 rgba(255, 255, 255, 255));
    width: 14px;
    margin-top: -5px;
    margin-bottom: -5px;
    border-radius: 7.4px;
}

QSlider#slider::handle:horizontal:hover {
    background: qradialgradient(spread:pad, cx:0.5, cy:0.5, radius:0.862, fx:0.5, fy:0.5, stop:0.1009091 rgba(188, 49, 49, 255), stop:0.107955 rgba(188, 49, 49, 255), stop:0.119318 rgba(196, 79, 79, 255), stop:0.130682 rgba(255, 222, 119, 255), stop:0.920904 rgba(235, 235, 235, 255), stop:0.99435 rgba(255, 255, 255, 255));
}

QSlider#slider::sub-page:horizontal{
    border: 1px solid #222225;
    border-radius: 2px;
    background: #B82525;
}

QSlider#volumeSlider::groove:horizontal {
    height: 4px;
    width: 80px;
    border: 1px solid #222225;
    border-radius: 2px;
    background: #18181A;
}

QSlider#volumeSlider::handle:horizontal {
    background: qradialgradient(spread:pad, cx:0.5, cy:0.5, radius:0.159, fx:0.5, fy:0.5, stop:0.806818 rgba(184, 37, 37, 255), stop:1 rgba(255, 255, 255, 255));
    width: 14px;
    margin-top: -5px;
    margin-bottom: -5px;
    border-radius: 7.4px;
}

QSlider#volumeSlider::sub-page:horizontal{
    border: 1px solid #222225;
    border-radius: 2px;
    background: #B82525;
}